# Production Environment Variables Template
# Copy this to .env.prod and fill in your actual values

# Database Configuration
MYSQL_ROOT_PASSWORD=your-secure-root-password-here
MYSQL_PASSWORD=your-secure-db-password-here

# Redis Configuration  
REDIS_PASSWORD=your-secure-redis-password-here

# JWT Configuration
JWT_SECRET=your-256-bit-jwt-secret-key-here

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your-smtp-app-password-here

# Domain Configuration
DOMAIN_NAME=yourdomain.com
API_DOMAIN=api.yourdomain.com

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-password-here

# Backup Configuration (Optional)
S3_BUCKET=your-backup-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
BACKUP_RETENTION_DAYS=30

# Slack Notifications (Optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

# Docker Image Tags (Updated by CI/CD)
BACKEND_IMAGE=ghcr.io/yourusername/job-portal2.0-backend:latest
FRONTEND_IMAGE=ghcr.io/yourusername/job-portal2.0-frontend:latest
VERSION=v1.0.0